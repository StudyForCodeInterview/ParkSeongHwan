#include <iostream>
#include <vector>
#include <queue>
#include <stack>
#include <memory.h>
#include <algorithm>
#pragma warning (disable: 4996)
using namespace std;


char inp[50];

int main()
{
	std::ios::sync_with_stdio(false);
	std::cin.tie(nullptr);
	std::cout.tie(nullptr);


	priority_queue<int,vector<int>,greater<>> pq;

	int n;
	cin >> n;

	while (n--) {
		int data;
		cin >> data;
		pq.push(data);
	}

	int result = 0;
	while (pq.size() > 1) {
		int a = pq.top();
		pq.pop();
		int b = pq.top();
		pq.pop();

		result += a + b;
		pq.push(a + b);
	}
	cout << result;
}
