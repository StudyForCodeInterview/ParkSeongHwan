#include <iostream>
#include <vector>
#include <queue>
#include <stack>
#include <memory.h>
#include <algorithm>
using namespace std;

int arr[100'001];

int main()
{
	std::ios::sync_with_stdio(false);
	std::cin.tie(nullptr);
	std::cout.tie(nullptr);

	int n;
	cin >> n;

	for (int i = 0; i < n; i++) {
		cin >> arr[i];
	}

	sort(arr, arr + n);

	int count = 0;

	int i;
	
	bool done = false;
	for (i = 0; i < n; i+=2) 
	{
		if (arr[i] > 0) {
			break;
		}
		if (i + 1 == n) {
			count += arr[i];
			done = true;
			break;
		}
		if (arr[i + 1] > 0) {
			count += arr[i];
			i++;
			break;
		}

		count += arr[i] * arr[i + 1];
	}

	if (!done) {
		for (int j = n - 1; j >= i;)
		{
			if (j == i) {
				count += arr[j];
				break;
			}

			if (arr[j-1] == 1) {
				count += arr[j];
				j--;
				continue;
			}

			count += arr[j] * arr[j - 1];

			j -= 2;
		}
	}




	cout << count;
}
